{
  "name": "pakplanner-electron",
  "version": "1.0.0",
  "description": "PakPlanner 2D - Electron wrapper (client in same folder)",
  "main": "electron-main.js",
  "scripts": {
    "postinstall": "npm --prefix . install",
    "install-client-deps": "npm --prefix . install",
    "build-client": "npm run build",
    "build": "npm run build-client && electron-builder",
    "start": "npm run build-client && electron ."
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "vite": "^5.0.0"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.pakplanner.app",
    "productName": "PakPlanner",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "node_modules/**/*",
      "package.json",
      "index.html"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}